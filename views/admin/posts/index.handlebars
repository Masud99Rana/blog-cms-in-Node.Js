<h1>ALL POSTS</h1>


<table class="table table-bordered">

    <thead>
        <tr>

            <th>Id</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Allow Comments</th>
            <th>Action</th>

        </tr>
    </thead>

    <tbody>
    	{{#each posts}}
    	<tr>
    		<td>{{id}}</td>
            <td><img height="50" width="60" class="img-responsive" src="/uploads/{{file}}" alt=""></td>
    		<td>{{title}}</td>
    		<td>{{status}}</td>
    		<td>{{allowComments}}</td>
    		<td>
    			<a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a> || 

    			<form action="/admin/posts/{{id}}?_method=DELETE" method="post">
    				<button type="submit" class="btn btn-danger">Delete</button>
    			</form>
    		</td>
    	</tr>
    	{{/each}}

    </tbody>
</table>